<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivImageItem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vSelected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_highlight_stroke"
        app:layout_constraintBottom_toBottomOf="@id/ivImageItem"
        app:layout_constraintEnd_toEndOf="@id/ivImageItem"
        app:layout_constraintStart_toStartOf="@id/ivImageItem"
        app:layout_constraintTop_toTopOf="@id/ivImageItem" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/selector_circle_hightlight_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/ivImageItem"
        app:layout_constraintTop_toTopOf="@id/ivImageItem" />

</androidx.constraintlayout.widget.ConstraintLayout>